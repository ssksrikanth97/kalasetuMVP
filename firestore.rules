rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // 1. Users Collection
    match /users/{userId} {
      allow read: if isAuth(); 
      // Allow create if user is authenticated and creating their own document
      // OR if the requester is an admin
      allow create: if isAuth() && (request.auth.uid == userId || isAdmin());
      // Allow update if owner OR admin
      allow update: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // 2. Artists Collection
    match /artists/{artistId} {
      allow get, list: if true; 
      allow create: if isOwner(artistId); 
      allow update: if isOwner(artistId) || isAdmin(); 
    }

    // 3. Institutions Collection
    match /institutions/{instId} {
      allow get, list: if true;
      // Allow create if user is authenticated and ID matches their own
      allow create: if isAuth() && (request.auth.uid == instId || isAdmin());
      allow update: if isAuth() && (request.auth.uid == instId || isAdmin());
      allow delete: if isAdmin();
    }

    // 4. Products Collection
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isAuth();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 5. Events Collection
    match /events/{eventId} {
      allow get, list: if true;
      allow create: if isAuth();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 6. Orders Collection
    // 6. Orders Collection
    match /orders/{orderId} {
      allow create: if isAuth(); 
      allow read: if isAuth() && (resource.data.customerId == request.auth.uid || request.auth.uid in resource.data.artistIds || isAdmin()); 
      allow update: if isAdmin(); 
    }

    // 7. Bookings Collection
    match /bookings/{bookingId} {
      allow create: if isAuth();
      allow read: if isAuth() && (resource.data.customerId == request.auth.uid || resource.data.artistId == request.auth.uid || resource.data.institutionId == request.auth.uid || isAdmin());
      allow update: if isOwner(resource.data.artistId) || isOwner(resource.data.institutionId) || isAdmin();
    }

    // 8. Testimonials Collection
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 9. Mail Queue Collection
    match /mail_queue/{mailId} {
      allow create: if true; // Allow anyone to queue emails (e.g., for signup OTP)
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // 10. Categories Collection
    match /categories/{categoryId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 11. System Settings Collection
    match /system_settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 12. Bulk Enquiries Collection
    match /bulk_enquiries/{enquiryId} {
      allow read: if isAdmin();
      allow create: if true; // Any user / guest can submit enquiry
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 13. Notifications Collection
    match /notifications/{notificationId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // 14. Mobile Banners Collection
    match /mobile_banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
